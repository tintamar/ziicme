<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/textb"
android:layout_marginTop="5dp"
android:orientation="vertical"
>

<CheckBox
   android:id="@+id/checkBox1"
   android:layout_width="50dp"
   android:layout_height="50dp"
   android:layout_alignParentLeft="true"
   android:layout_alignParentTop="true"
   android:visibility="visible"
   android:textColor="#d5e40c01"

   android:focusable="false"
   android:focusableInTouchMode="false"
   android:layout_alignBottom="@+id/numgsm"
   android:buttonTint="#d5e40c01"

    />
<TextView
    android:id="@+id/nom"
    android:paddingLeft="2dp"
    android:textSize="15dp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignLeft="@+id/numgsm"
    android:layout_alignStart="@+id/numgsm" />

<TextView
    android:id="@+id/numgsm"
    android:paddingLeft="2dp"
    android:textSize="15dp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/nom"
    android:layout_toRightOf="@+id/checkBox1"
    android:layout_toEndOf="@+id/checkBox1" />
</RelativeLayout>